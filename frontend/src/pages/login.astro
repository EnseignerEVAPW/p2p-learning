---
import BaseLayout from '../components/layout/BaseLayout.astro'
import LoginForm from '../components/view/LoginForm.jsx'

---

<BaseLayout>
  <head>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <div class="flex justify-center items-center min-h-screen">
    <div class="login-wrapper">
      <div class="w-full max-w-sm p-6 bg-white rounded-lg shadow-lg">
        <h2 class="text-2xl font-semibold text-center mb-4">Iniciar Sesión</h2>

        <LoginForm client:load />

        <p class="text-sm text-center text-gray-600">¿No tienes una cuenta? <a href="/register" class="text-blue-500 hover:text-blue-600">Regístrate</a></p>
      </div>
    </div>
  </div>
</BaseLayout>
